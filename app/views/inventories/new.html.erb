<div class="flex justify-center mt-48 mb-48 container mx-auto">
  <div class="w-3/5 bg-white shadow-lg p-10">
   <h1 class="header-title">Add new inventory</h1>
    <%= form_with model: @new_inventory, url: '/inventories' do |form| %>
      <br>
      <%= form.label :name, class: 'form-label' %><br />
      <%= form.text_field :name, placeholder: 'Name of the inventory' %>
      <br>
      <%= form.submit class: 'btn btn-secondary' %>
    <% end %>
   </div>
</div>